<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSemana1_Amagua.Vistas.AporteIESS"
             Title="AporteIESS">
    <StackLayout Margin="20">
        <Label 
    Text="Semana 2 - Aporte de IESS"
    FontSize="24"
    HorizontalTextAlignment="Center"></Label>

        <Entry x:Name="NombreEntry" Placeholder="Nombre" />
        <Entry x:Name="ApellidoEntry" Placeholder="Apellido" />
        <Entry x:Name="EdadEntry" Placeholder="Edad" Keyboard="Numeric" />
        <Entry x:Name="SalarioEntry" Placeholder="Salario" Keyboard="Numeric" />

        <Button x:Name="CalcularButton" Text="Calcular" Clicked="CalcularButton_Clicked" />
    </StackLayout>
</ContentPage>